page .home-swiper {
  /* 轮播图 */
  background-color: #999;
}

page .home-swiper swiper {
  width: 750rpx;
  height: 340rpx;
  padding: 10rpx;
  background-color: #90caf9;
}

page .home-swiper swiper image {
  width: 100%;
  height: 100%;
}

page .home-items {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

page .home-items navigator {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  padding: 20rpx;
}

page .home-items navigator image {
  width: 100%;
}

page .home-floor {
  padding: 0 10rpx;
}

page .home-floor .home-floor-items .floor-title {
  padding: 20rpx 10rpx;
}

page .home-floor .home-floor-items .floor-title .floor-image {
  width: 100%;
}

page .home-floor .home-floor-items .floor-content {
  overflow: hidden;
}

page .home-floor .home-floor-items .floor-content .floor-item {
  width: 33.33%;
  float: left;
}

page .home-floor .home-floor-items .floor-content .floor-item:nth-last-child(-n+4) {
  /* 计算剩余四张图的高度比   */
  /* 
                            第一张图 宽 跟 高 ：  232 * 386 
                            宽高比 ：  232 / 386 = 33.33% / height(高未知数)
                            第一张图片高度  height:33.33vw * 386 / 232
                            剩余图片除2

                        */
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 10rpx;
  height: 27.45259vw;
}

page .home-floor .home-floor-items .floor-content .floor-item:nth-child(2), page .home-floor .home-floor-items .floor-content .floor-item:nth-child(3) {
  padding-bottom: 10rpx;
}

page .home-floor .home-floor-items .floor-content .floor-item .list-image {
  width: 100%;
  height: 100%;
}
